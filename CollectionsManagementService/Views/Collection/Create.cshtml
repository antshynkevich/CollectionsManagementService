@model CollectionsManagementService.VievModels.Collection.CreateCollectionViewModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post" enctype="multipart/form-data">
    <div class="col-5">
        <div class="form-group">
            <label asp-for="Name">Collection name:</label>
            <input class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Collection description:</label>
            <input class="form-control" asp-for="Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Choose the category of your collection</label>
            <select class="form-control dropdown" asp-for="CategoryId" asp-items="Model.Categories">
                <option value="" hidden disabled selected>-Select a category-</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger">Select a collection category</span>
        </div>
        <div class="form-label">
            <label>You can upload an image for your collection</label>
            <input asp-for="Image" class="form-control" type="file" accept="image/jpg, image/jpeg, image/png, image/svg" />
        </div>
        <div class="form-control">
            @for (var i = 0; i < Model.CollectionFields.Length; i++)
            {
                <div class="form-group">
                    <input class="form-check-input" asp-for="CollectionFields[i].IsFieldNeeded" />
                    <label asp-for="CollectionFields[i].FieldName">@Model.CollectionFields[i].FieldType Field @i:</label>
                    <input class="form-control" asp-for="CollectionFields[i].FieldName" />
                    <input type="hidden" asp-for="CollectionFields[i].FieldType" />
                </div>
            }
        </div>
    </div>
    <button class="btn btn-outline-success mt-3" type="submit">Create Collection</button>
</form>

<style>
    .field-validation-valid {
        display: none;
    }
</style>
