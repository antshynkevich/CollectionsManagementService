@model CollectionsManagementService.VievModels.CreateCollectionViewModel

<form method="post">
    <div class="col-5">
        <div class="form-group">
            <label asp-for="Name">Collection name:</label>
            <input class="form-control" asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Collection description:</label>
            <input class="form-control" asp-for="Description" />
            <span asp-validation-for="Description"></span>
        </div>
        <div class="form-group">
            <label>Choose the category of your collection</label>
            <select class="form-control dropdown" asp-for="CategoryId" asp-items="Model.Categories">
            </select>
        </div>
        <div class="form-control">
            @for (var i = 0; i < Model.CollectionFields.Length; i++)
            {
                <div class="form-group">
                    <input class="form-check-input" asp-for="CollectionFields[i].IsFieldNeeded" />
                    <label asp-for="CollectionFields[i].FieldName">@Model.CollectionFields[i].FieldType Field @i:</label>
                    <input class="form-control" asp-for="CollectionFields[i].FieldName" />
                    <span asp-validation-for="CollectionFields[i].FieldName"></span>
                    <input type="hidden" asp-for="CollectionFields[i].FieldType" />
                </div>
            }
        </div>
    </div>
    <button class="btn btn-outline-success" type="submit">Create Collection</button>
</form>
